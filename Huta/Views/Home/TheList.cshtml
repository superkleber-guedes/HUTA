@model Huta.Prop.CardList

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All the reasons</title>
    <link rel="stylesheet" href="~/css/TheList.css" type="text/css" />
    <script src="~/js/TheList.js" type="text/javascript"></script>
</head>
<body>
    <div id="stacked-cards-block" class="stackedcards stackedcards--animatable init">
        <div class="stackedcards-container">
            @foreach (var card in Model.Cards)
            {
                <div class="card-item">
                    <div class="card-top">
                        @if ((card.HasDate) && (card.HasIndex))
                        {
                            <span class="card-date">@card.Date.Value.ToString("dd/MM/yyyy")</span>
                            <span class="card-count">@card.Index.ToString() of @Model.TotalCount</span>
                        }
                    </div>
                    <div class="card-centre">
                        <span class="card-message">@card.Message</span>
                    </div>
                    <div class="card-bottom">
                        <span class="card-submessage">@card.SubMessage</span>
                    </div>
                </div>
            }
        </div>
        <div class="stackedcards--animatable stackedcards-overlay top">Swipe</div>
        <div class="stackedcards--animatable stackedcards-overlay right">Swipe</div>
        <div class="stackedcards--animatable stackedcards-overlay left">Swipe</div>
    </div>
    <div class="global-actions">
        <div class="left-action">Left</div>
        <div class="top-action">Top</div>
        <div class="right-action">Right</div>
    </div>
</body>
</html>
