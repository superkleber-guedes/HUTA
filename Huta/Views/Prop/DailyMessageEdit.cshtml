@model Huta.Prop.DailyMessage

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add or Edit message</title>
</head>
<body>
<h4>Daily Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                @Html.HiddenFor(m => m.Date)
                @Html.DisplayFor(m => m.Date)
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <br/>
                <input asp-for="Message" class="form-control" style="width:100%" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="SubMessage" class="control-label"></label><br/>
                <input asp-for="SubMessage" class="form-control" style="width:100%" />
                <span asp-validation-for="SubMessage" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
